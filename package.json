{
  "name": "flatlayer-sdk",
  "version": "0.1.0",
  "description": "A JavaScript library for interacting with the Flatlayer CMS API",
  "main": "dist/flatlayer.js",
  "module": "dist/flatlayer.mjs",
  "types": "dist/flatlayer.d.ts",
  "files": [
    "dist",
    "src/svelte"
  ],
  "exports": {
    ".": {
      "import": "./dist/flatlayer.mjs",
      "require": "./dist/flatlayer.js"
    },
    "./svelte/ResponsiveImage": "./src/svelte/ResponsiveImage.svelte",
    "./svelte/Markdown": "./src/svelte/Markdown.svelte"
  },
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns=integration-test",
    "test:integration": "jest tests/flatlayer.integration-test.js"
  },
  "keywords": [
    "cms",
    "api",
    "content management",
    "flatlayer"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "dompurify": "^3.1.6",
    "marked": "^14.0.0",
    "slugify": "^1.6.6",
    "thumbhash": "^0.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^4.2.18"
  },
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest",
      "node_modules/thumbhash/.+\\.js$": "<rootDir>/jest-esm-transformer.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!thumbhash)"
    ],
    "testMatch": [
      "**/tests/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node"
    ]
  }
}
